{
  "manifest_version": 3,
  "name": "Tab Sub-Groups",
  "version": "1.0",
  "description": "Create collapsible sub-groups within Chrome tab groups",
  "permissions": ["tabs", "tabGroups", "storage", "tabHide"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["label.html", "label.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/icon-light.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
